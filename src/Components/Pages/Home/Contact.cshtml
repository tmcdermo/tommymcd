@model EmailModel
@{
    ViewData["Title"] = "Contact";
}

<div class="bars d-block d-sm-none"></div>

<div id="box-container">
    <div id="contact" class="row mt-3">
        <div class="col-12 d-flex flex-column d-lg-none">
            <div class="mt-sm-5 ml-3 "><h1 class="font-weight-bold">Send Me</h1><h1 class="font-weight-bold">A Message</h1></div>
            <div><hr class="hor-line mt-2" /></div>
            @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { @class = "col-12 col-md-8 font-weight-bold mx-auto" }))
            {
                <div class="form-group col-12">
                    @Html.LabelFor(m => m.Name, new { @class = "mt-1 p-0 col-10" })
                    @Html.TextBoxFor(m => m.Name, new { @class = "col-10 form-control", @placeholder="Name" })    
                </div>
                <div class="form-group col-12">
                    @Html.LabelFor(m => m.Email, new { @class = "mt-1 p-0 col-10" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "col-10 form-control", @placeholder="Email Address" })
                </div>
                <div class="form-group col-12">
                    @Html.LabelFor(m => m.Phone, new { @class = "mt-1 p-0 col-10" })
                    @Html.TextBoxFor(m => m.Phone, new { @class = "col-10 form-control", @placeholder="Phone Number" })
                </div>
                <div class="form-group col-12">
                    @Html.LabelFor(m => m.Message, new { @class = "mt-1 p-0 col-10" })
                    @Html.TextAreaFor(m => m.Message, new { @class = "col-10 form-control", @placeholder="Message" })
                </div>
                <div class="d-flex">
                    <button type="submit" class="btn mt-1 ml-3">Send</button>
                    <blockquote class="mt-1 ml-3 font-weight-bold">Or Email me at: <a href="mailto:tommy@tommymcd.com">tommy@tommymcd.com</a></blockquote>
                </div>
            }            
        </div>
        <div class="col-12 d-none d-lg-flex mt-5">
            <div class="row d-lg-flex align-items-center"> 
                <div class="col-lg-3 msg-request mx-auto mr-0">
                    <div class="font-weight-bold float-right text-right">
                        <p class="">Send Me</p>
                        <p class="">A Message</p>
                    </div>
                </div>
                <div class="vert-line"></div>
                @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { @class = "col-lg-8 col-xl-6 font-weight-bold mx-auto" }))
                {
                    <div class="form-group col-12">
                        @Html.LabelFor(m => m.Name, new { @class = "ml-5 mt-1 p-0 col-10" })
                        @Html.TextBoxFor(m => m.Name, new { @class = "ml-5 col-10 form-control", @placeholder="Name" })    
                    </div>
                    <div class="form-group col-12">
                        @Html.LabelFor(m => m.Email, new { @class = "ml-5 mt-1 p-0 col-10" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "ml-5 col-10 form-control", @placeholder="Email Address" })
                    </div>
                    <div class="form-group col-12">
                        @Html.LabelFor(m => m.Phone, new { @class = "ml-5 mt-1 p-0 col-10" })
                        @Html.TextBoxFor(m => m.Phone, new { @class = "ml-5 col-10 form-control", @placeholder="Phone Number" })
                    </div>
                    <div class="form-group col-12">
                        @Html.LabelFor(m => m.Message, new { @class = "ml-5 mt-1 p-0 col-10" })
                        @Html.TextAreaFor(m => m.Message, new { @class = "ml-5 col-10 form-control", @placeholder="Message" })
                    </div>
                    <div class="d-flex ml-5">
                        <button type="submit" class="btn mt-1 ml-3">Send</button>
                        <blockquote class="mt-4 ml-3 font-weight-bold">Or Email me at: <a href="mailto:tommy@tommymcd.com">tommy@tommymcd.com</a></blockquote>
                    </div>
                }
            </div>                        
        </div>
        @if (TempData["msgSent"] != null) {
            <script>alert("@TempData["msgSent"]");</script>
        }
        @if (TempData["msgFailed"] != null) {
            <script>alert("@TempData["msgFailed"]");</script>
        }
    </div>
</div>
